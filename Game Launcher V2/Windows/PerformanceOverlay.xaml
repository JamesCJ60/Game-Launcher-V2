<Window x:Class="Game_Launcher_V2.Windows.PerformanceOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Launcher_V2.Windows"
        mc:Ignorable="d"
        Title="PerformanceOverlay" Height="450" Width="800" AllowsTransparency="True" Background="Transparent" WindowState="Maximized" Topmost="True" WindowStyle="None">
    <Grid>
        <DockPanel Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Border  Background="#E6181818" Padding="7" CornerRadius="7">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Name="spFrameData">
                        <Image Name="imgFrame" Height="24" Width="24" Margin="0,0,7,0" ></Image>
                        <TextBlock VerticalAlignment="Center" Foreground="White" FontSize="16" Margin="0,0,5,0">Frame Info:</TextBlock>
                        <TextBlock VerticalAlignment="Center" x:Name="lblFPS" Foreground="White" FontSize="16" Margin="0,0,5,0" ></TextBlock>
                    </StackPanel>

                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>
